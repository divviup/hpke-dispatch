{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2022",
    "lib": ["dom", "es2020"],
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "declaration": true,
    "rootDir": "src",
    "types": ["node", "mocha"],
    "outDir": "dist",
    "plugins": [
      {
        "name": "typescript-eslint-language-service"
      }
    ]
  },
  "exclude": ["**/*.spec.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["./src/*.ts", "./tests/*.ts"]
}
